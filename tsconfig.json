{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build/esm",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "importHelpers": true,
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
